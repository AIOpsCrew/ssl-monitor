# AWS Configuration
# Use IAM roles instead of access keys in production!
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# SNS Configuration (optional)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:your-topic-name

# Flask Configuration
SECRET_KEY=generate_a_secure_random_key_here
DEBUG=False

# Data Directory
DATA_DIR=data

# Application Settings
FLASK_APP=run.py
FLASK_ENV=production

# Security Notes:
# 1. NEVER commit the actual .env file to version control
# 2. Generate SECRET_KEY with: python -c 'import secrets; print(secrets.token_hex(32))'
# 3. In production, use AWS IAM roles instead of access keys
# 4. Rotate credentials regularly
# 5. Keep DEBUG=False in production
